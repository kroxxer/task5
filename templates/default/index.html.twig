{% extends 'base.html.twig' %}

{% block title %}Generate Persons{% endblock %}

{% block body %}
    <main class="w-100 m-auto text-center">
        <nav class="navbar navbar-expand-lg bg-body-tertiary rounded" aria-label="Twelfth navbar example">
            <div class="collapse navbar-collapse justify-content-md-center ">
                <ul class="navbar-nav">
                    <li class="nav-item mx-2">
                        <button class="btn btn-danger button-large" >Delete</button>
                    </li>
                    <li class="nav-item mx-2">
                        <button class="btn btn-warning button-large" >Block</button>
                    </li>
                    <li class="nav-item mx-2">
                        <button class="btn btn-primary button-large" >Unblock</button>
                    </li>
                </ul>
            </div>
        </nav>
        <br>
        <h1>Persons</h1>
        <br>
        <div class="table-responsive mx-5">
            <table class="table table-striped table-bordered text-center container">
                <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Identity</th>
                    <th scope="col">Name</th>
                    <th scope="col">Address</th>
                    <th scope="col">Phone</th>
                </tr>
                </thead>
                <tbody>
                {% for person in persons %}
                    <tr>
                        <td>{{ person.id }}</td>
                        <td>{{ person.identity }}</td>
                        <td>{{ person.name }}</td>
                        <td>{{ person.address }}</td>
                        <td>{{ person.phoneNumber }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </main>
{% endblock %}
